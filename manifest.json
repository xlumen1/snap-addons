{
    "manifest_version": 3,
    "name": "Snap! Addons",
    "version": "1.0",
    "description": "Plugin Manager for Snap! BYOB",
    "author": "Turqul",

    "permissions": [
        "storage",
        "scripting"
    ],

    "host_permissions": [
        "*://snap.berkeley.edu/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["*://snap.berkeley.edu/*"],
            "js": ["browser-polyfill.js", "content.js"]
        }
    ],

    "action": {
        "default_title": "Snap! Addons",
        "default_popup": "popup.html"
    }
}
